{{define "index.tmpl"}}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.AppName}} Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary">
        <div class="container-fluid">
            <span class="navbar-brand fw-bold">{{.AppName}} Monitoring</span>
            <span class="text-secondary small">Real-time metrics &amp; logs</span>
        </div>
    </nav>

    <main class="container-fluid py-4">
        <div class="row g-4">
            <div class="col-12 col-xl-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Metrics</h2>
                        <span class="badge bg-primary" id="metrics-count">0</span>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-dark table-hover mb-0 align-middle" id="metrics-table">
                            <thead class="table-secondary text-dark">
                                <tr>
                                    <th scope="col">Timestamp</th>
                                    <th scope="col">Component</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Value</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Fields</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xl-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Logs</h2>
                        <span class="badge bg-info" id="logs-count">0</span>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-dark table-striped table-hover mb-0 align-middle" id="logs-table">
                            <thead class="table-secondary text-dark">
                                <tr>
                                    <th scope="col">Timestamp</th>
                                    <th scope="col">Level</th>
                                    <th scope="col">Component</th>
                                    <th scope="col">Message</th>
                                    <th scope="col">Fields</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        const refreshInterval = {{.RefreshIntervalMs}};

        function formatFields(fields) {
            if (!fields || Object.keys(fields).length === 0) {
                return '<span class="text-muted">—</span>';
            }
            try {
                return '<code>' + JSON.stringify(fields) + '</code>';
            } catch (err) {
                return '<code>' + String(fields) + '</code>';
            }
        }

        async function fetchMetrics() {
            const response = await fetch('/api/metrics');
            if (!response.ok) {
                throw new Error('Failed to load metrics');
            }
            const data = await response.json();
            return data.metrics || [];
        }

        async function fetchLogs() {
            const response = await fetch('/api/logs');
            if (!response.ok) {
                throw new Error('Failed to load logs');
            }
            const data = await response.json();
            return data.logs || [];
        }

        function updateTable(tableBody, rows, columns) {
            tableBody.innerHTML = rows.map(row => {
                return `<tr>${columns.map(col => `<td>${row[col]}</td>`).join('')}</tr>`;
            }).join('');
        }

        function updateMetricsTable(metrics) {
            const body = document.querySelector('#metrics-table tbody');
            const rows = metrics.map(metric => ({
                timestamp: new Date(metric.timestamp).toLocaleString(),
                component: metric.component || '<span class="text-muted">—</span>',
                name: `<span class="fw-semibold">${metric.name}</span>`,
                value: `<code>${metric.value}</code>`,
                type: metric.type,
                fields: formatFields(metric.fields),
            }));
            updateTable(body, rows, ['timestamp', 'component', 'name', 'value', 'type', 'fields']);
            document.getElementById('metrics-count').textContent = metrics.length;
        }

        function updateLogsTable(logs) {
            const body = document.querySelector('#logs-table tbody');
            const rows = logs.map(log => ({
                timestamp: new Date(log.timestamp).toLocaleString(),
                level: `<span class="badge level-${log.level}">${log.level.toUpperCase()}</span>`,
                component: log.component || '<span class="text-muted">—</span>',
                message: `<span class="text-break">${log.message}</span>`,
                fields: formatFields(log.fields),
            }));
            updateTable(body, rows, ['timestamp', 'level', 'component', 'message', 'fields']);
            document.getElementById('logs-count').textContent = logs.length;
        }

        async function refresh() {
            try {
                const [metrics, logs] = await Promise.all([fetchMetrics(), fetchLogs()]);
                updateMetricsTable(metrics);
                updateLogsTable(logs);
            } catch (error) {
                console.error('Dashboard refresh failed', error);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            refresh();
            setInterval(refresh, Math.max(refreshInterval, 1000));
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
{{end}}
